<div id="scrollbar" class="container-fluid pt-0 bg-light">
    <div class="container">
        @{
            var pessoas = ViewData["perfil"] as List<Pessoa>;
            foreach (var pessoa in pessoas)
            {
                <div class="row p-2">
                    <div class="col-md-4 p-3 bg-info full-height" >
                        <img class="" src="~/img/perfil.png" style="width:100%;"/>
                    </div>         
                    <div class="col-md-8">
                        <h4 class="text-dark">@pessoa.Nome</h4>
                        <hr />
                        <div class="row">
                            <div class="col col-md-3">
                                <p>Email:</p>
                                <p>Telefone:</p>
                                <p>Endereço:</p>
                                <p>Sexo:</p>
                                <p>Data de nascimento:</p>
                                <p>Nacionalidade: </p>
                                <p>Registrado em: </p>
                            </div>
                            <div class="col col-md-9">
                                <p>@pessoa.Email &nbsp;</p>
                                <p>@pessoa.Telefone &nbsp;</p>
                                @{
                                    if (pessoa.Endereco != null)
                                    {
                                        <p>@pessoa.Endereco, @pessoa.Numero &nbsp;  </p>
                                    }
                                    else
                                    {
                                        <p>&nbsp;</p>
                                    }
                                }   
                                <p>@pessoa.Sexo &nbsp;</p>
                                <p>@pessoa.DataNascimento &nbsp;</p>
                                <p>@pessoa.Nacionalidade &nbsp;</p>
                                <p>@String.Format("{0:dd/MM/yyyy}",pessoa.DataCadastro) &nbsp;</p>
                            </div>
                        </div>
                    </div>          
                </div>
            }
        }
    </div>
</div>