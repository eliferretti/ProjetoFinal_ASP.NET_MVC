@model Andor.Models.Formacao
@{
    ViewData["Title"] = "Create";
    var id_pessoa = ViewData["Id_pessoa"];
}
<div id="scrollbar" class="container-fluid pt-0 bg-light">
<div class="container text-black-50 p-3">
    <h4 class="text-right">Formação profissional</h4>
    <hr />
    <div class="row col-12">
        <div class="col-6"><!-- coluna esquerda -->
            <img class="col-md-12" src=~/img/formacao.jpg/>
        </div>
        <div class="col-6"><!-- coluna direita -->
            <form asp-action="formacaoCreate">
                <div class="form-group"  style="display:none">
                    <input type="text" value="@ViewData["Id_pessoa"]" asp-for="Id_pessoa" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Curso / Graduação</label>
                    <input asp-for="Nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Descriçao</label>
                    <textarea asp-for="Descricao" class="form-control" ></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Instituiçao</label>
                    <input asp-for="Instituicao" class="form-control" />
                </div>
                <div class="form-group col-6">
                    <label class="control-label">Data de início</label>
                    <input asp-for="Inicio" class="form-control" />
                </div>
                <div class="form-group col-6">
                    <label class="control-label">Data de conclusão</label>
                    <input asp-for="Fim" class="form-control" />
                </div>
                <div class="form-group col-6">
                    <label class="control-label">Situação</label>
                     <select class="custom-select" asp-for="Situacao">
                        <option selected>-</option>
                        <option>Completo</option>
                        <option>Incompleto</option>
                    </select>
                </div>
                <div class="form-group">
                    <hr />
                    <input type="submit" value="Adicionar" class="btnn btn-editar col-3" />
                    <a asp-controller="Pessoa" asp-action="Details" asp-route-id="@id_pessoa" class="btnn btn-editar ml-2 col-3">Voltar</a>
                </div>
            </form>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
</div>
</div>
