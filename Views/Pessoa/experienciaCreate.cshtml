@model Andor.Models.Experiencia
@{
    ViewData["Title"] = "Adicionar";
    var id_pessoa = ViewData["Id_pessoa"];
}
<div id="scrollbar" class="container-fluid pt-0 bg-light">
    <div class="container text-black-50 p-3">
        <h4 class="text-right">Experiência profissional</h4>
        <hr />
        <div class="row">
            <div class="col-6"><!-- coluna da esquerda -->
                <img class="col-md-12" src=~/img/experiencia.jpg/>
            </div>
            <div class="col-6"><!-- coluna da direita -->
                <form asp-action="experienciaCreate">   
                    <div class="form-group"  style="display:none">
                        <input type="text" value="@ViewData["Id_pessoa"]" asp-for="Id_pessoa" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ramo</label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descrição</label>
                        <input asp-for="Descricao" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cargo" class="control-label"></label>
                        <input asp-for="Cargo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Instituicao" class="control-label"></label>
                        <input asp-for="Instituicao" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label class="control-label">Início</label>
                        <input asp-for="Inicio" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label class="control-label">Término</label>
                        <input asp-for="Fim" class="form-control" />
                    </div>
                    <div class="form-group">
                        <hr />
                        <input type="submit" value="Adicionar" class="btnn btn-editar col-3" />
                        <a asp-controller="Pessoa" asp-action="Details" asp-route-id="@id_pessoa" class="btnn btn-editar ml-2 col-3">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    <br />
    <br />
    <br />
    <br />
    </div>
</div>